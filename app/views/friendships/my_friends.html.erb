<h1>Friends</h1>

<div class="search-area">
    <h3>Search Friends</h3> 
    <%= form_tag search_friends_path, remote: true, method: :get do %>
        <div class="form-group row">
            <div class="col-sm-9">
                <%= text_field_tag :search, params[:search], placeholder: "Name or Email", autofocus: true, class: "form-control form-control-lg" %>
            </div>
            <div class="col-sm-3">
                <%= button_tag type: :submit, class: "btn btn-success" do %>
                    <%= fa_icon 'search 2x' %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
<div id="search_results" class="error_msg">
</div>

<% if @friends.empty? %>
    <%=  'You are currently not friends with anyone' %>
<% else %>
    <%= render 'friendships/list-friend' %>
<% end %>